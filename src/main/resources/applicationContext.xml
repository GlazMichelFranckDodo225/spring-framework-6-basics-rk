<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
    http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="xmlJdbcConnection" class="com.dgmf.beans.xmlconfig.XmlJdbcConnection"/>

    <bean id="xmlPersonDAO" class="com.dgmf.beans.xmlconfig.XmlPersonDAO">
        <property name="xmlJdbcConnection" ref="xmlJdbcConnection"></property>
    </bean>

</beans>